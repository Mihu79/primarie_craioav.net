@model IEnumerable<Complaint>

@{
    ViewData["Title"] = "Index";
}

<h1>Complaints</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateFiled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Citizen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateFiled)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Citizen.FullName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ComplaintID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ComplaintID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ComplaintID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
